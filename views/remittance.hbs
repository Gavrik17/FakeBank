<form action="/offers/remittance" method="post">
<input type="hidden" name="sender" value={{pay.id}}>
<div class="card forms">
    <h5 class="card-header">Номер счета: {{pay.id}}</h5>
    <div class="card-body">
        <h5 class="card-title">Средства на счете: {{pay.amount}}</h5>
        <p class="card-text">Введите счет получателя <input class="form-control" type="text" name="receiver"></p>
        <p class="card-text">Сумма которую вы хотите перевести <input class="form-control" type="text" name="amount"></p>
        {{#if access}}
            <button class="btn btn-primary">Перевести</button>
        {{else}}
            <h5><p class="card-text warning">На вашем счете не хватает средств для совершения операции</p></h5>
        {{/if}}
    </div>
</div>
</form>

